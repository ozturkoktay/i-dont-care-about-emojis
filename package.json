{
  "name": "emoji-blocker-extension",
  "version": "1.0.0",
  "description": "Hide, grayscale, dim, or blur emojis across the web with a simple whitelist and perâ€‘site control.",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "check": "npm run lint && npm run validate && npm test",
    "watch": "chokidar \"src/**/*\" \"manifest.json\" \"icons/**/*\" -c \"npm run check && npm run build\"",
    "dev:chrome": "npm run check && npm run build && npm run watch",
    "dev:firefox": "npm run build && web-ext run --source-dir=dist --start-url about:debugging#/runtime/this-firefox",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "validate": "node scripts/validate-manifest.js",
    "package:chrome": "cd dist && zip -r ../emoji-blocker-chrome.zip .",
    "package:firefox": "cd dist && zip -r ../emoji-blocker-firefox.xpi ."
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "emoji",
    "blocker",
    "productivity"
  ],
  "author": "Oktay Ozturk",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "web-ext": "^9.2.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  }
}
